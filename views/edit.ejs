<% include ./partials/header %>

<div class="ui main text container segment">
  <header class="ui huge brown header">Edit Post</header>
  <form class ="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field"> 
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%=blog.title%>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%=blog.image%>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]"><%=blog.body%></textarea>
    </div>
    <div class="field">
      <input type="submit" id="new-blog-submit-btn" class="ui inverted green button">
    </div>
  </form>
</div>


<% include ./partials/footer %>